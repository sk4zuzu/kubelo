---
apiVersion: kubeadm.k8s.io/v1beta1
kind: InitConfiguration
apiEndpoint:
  advertiseAddress: {{ ansible_default_ipv4.address }}
  bindPort: 6443
nodeRegistration:
  name: {{ ansible_fqdn }}
{% if cloud_provider | d() %}
  kubeletExtraArgs:
    cloud-provider: {{ cloud_provider }}
{% endif %}

---
apiVersion: kubeadm.k8s.io/v1beta1
kind: ClusterConfiguration
clusterName: {{ cluster_name }}
controlPlaneEndpoint: local-lb:7878
networking:
  podSubnet: 10.244.0.0/16
certificatesDir: /etc/kubernetes/pki/
etcd:
  external:
    endpoints: {{ etcd_external_endpoints | to_json }}
    caFile: /etc/etcd/pki/crt/etcd-ca.crt
    certFile: /etc/etcd/pki/crt/etcd.crt
    keyFile: /etc/etcd/pki/key/etcd.key
apiServer:
  certSANs: {{ (extra_server_cert_sans + api_server_cert_sans) | unique | to_json }}
  extraArgs:
{% if cloud_provider | d() %}
    cloud-provider: {{ cloud_provider }}
{% endif %}
controllerManager:
  extraArgs:
    address: 0.0.0.0
{% if cloud_provider | d() %}
    cloud-provider: {{ cloud_provider }}
{% endif %}
scheduler:
  extraArgs:
    address: 0.0.0.0
{% if cloud_provider | d() %}
    cloud-provider: {{ cloud_provider }}
{% endif %}

---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
systemReserved:
  memory: "250Mi"
kubeReserved:
  memory: "250Mi"
authentication:
  webhook:
    enabled: true
  anonymous:
    enabled: false
authorization:
  mode: Webhook

